# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=code_review
DB_USER=postgres
DB_PASSWORD=your_password_here

# For AWS RDS, use the RDS endpoint:
# DB_HOST=your-rds-instance.xxxxxxxxxxxx.us-east-1.rds.amazonaws.com

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AI Provider Configuration
# Set the default AI provider: openai, openrouter, or bedrock
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-opus

# AWS Bedrock Configuration
# Uses AWS profile for credentials
AWS_PROFILE=default2
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Rename this file to .env before use

